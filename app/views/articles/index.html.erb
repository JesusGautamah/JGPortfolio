<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Title</th>
      <th>Description</th>
      <th>Content</th>
      <th>Conclusion</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.project.title %></td>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= article.content %></td>
        <td><%= article.conclusion %></td>
        <td><%= article.published %></td>
        <td><%= button_to 'Show', article, class:"portfolio-btn", method: "get" %></td>
        <td><%= button_to 'Edit', edit_article_path(article), class:"portfolio-btn", method: "get" %></td>
        <td><%= button_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class:"portfolio-btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
